{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JEMML Data Processor",
  "description": "This schema defines operations performed by examples in the JEMML library",
  "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "title": "Action",
            "description": "The target machine learning action to perform",
            "enum": [
                "PREPROCESS_DATA",
                "CLASSIFY_DATA",
                "TRAIN_PREPROCESSOR",
                "TRAIN_CLASSIFIER",
                "GENERATE_ERR"
            ]
        },
        "preprocessors": {
            "type": "array",
            "title": "Preprocessors",
            "items": {
                "$ref": "#/definitions/preprocessor"
            }
        }
    },
    "dependencies": {
        "type": {
            "oneOf": [
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "PREPROCESS_DATA"
                            ]
                        },
                        "input": {
                            "$ref": "#/definitions/inputFile"
                        },
                        "output": {
                            "$ref": "#/definitions/output/multi"
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "CLASSIFY_DATA"
                            ]
                        },
                        "input": {
                            "$ref": "#/definitions/input"
                        },
                        "output": {
                            "$ref": "#/definitions/output/multi"
                        },
                        "preprocessors": {
                            "type": "string"
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "TRAIN_PREPROCESSOR"
                            ]
                        },
                        "input": {
                            "$ref": "#/definitions/inputFile"
                        },
                        "output": {
                            "$ref": "#/definitions/output/multi"
                        },
                        "preprocessors": {
                            "type": "string"
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "TRAIN_CLASSIFIER"
                            ]
                        },
                        "input": {
                            "$ref": "#/definitions/input"
                        },
                        "output": {
                            "$ref": "#/definitions/output/multi"
                        },
                        "preprocessors": {
                            "type": "string"
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "GENERATE_ERR"
                            ]
                        },
                        "input": {
                            "$ref": "#/definitions/input"
                        },
                        "output": {
                            "$ref": "#/definitions/output/multi"
                        },
                        "preprocessors": {
                            "type": "string"
                        }
                    }
                }
            ]
        }
    },
    "definitions": {
        "input": {
            "type": "object",
            "title": "Input Configuration",
            "properties": {
                "hasTestInput": {
                    "type": "boolean",
                    "title": "Has Test Input File",
                    "enum": [
                        true,
                        false
                    ]
                }
            },
            "dependencies": {
                "hasTestInput": {
                    "oneOf": [
                        {
                            "properties": {
                                "hasTestInput": {
                                    "enum": [
                                        true
                                    ]
                                },
                                "trainingInput": {
                                    "title": "Training Input",
                                    "$ref": "#/definitions/inputFile"
                                },
                                "testInput": {
                                    "title": "Test Input",
                                    "$ref": "#/definitions/inputFile"
                                }

                            }
                        },
                        {
                            "properties": {
                                "hasTestInput": {
                                    "enum": [
                                        false
                                    ]
                                },
                                "trainingInput": {
                                    "title":  "Training Input",
                                    "$ref": "#/definitions/inputFile"
                                }
                            }
                        }
                    ]
                }
            }
        },
        "output": {
            "multi": {
                "type": "object",
                "title": "Output Configuration",
                "properties": {
                    "outputFormat": {
                        "type": "string",
                        "title": "Output Format",
                        "enum": [
                            "CSV",
                            "ZJSON"
                        ]
                    }
                },
                "dependencies": {
                    "outputFormat": {
                        "oneOf": [
                            {
                                "properties": {
                                    "outputFormat": {
                                        "enum": [
                                            "CSV"
                                        ]
                                    },
                                    "defaultPath": {
                                        "type": "string",
                                        "title": "Default Path"
                                    },
                                    "identifierPaths": {
                                        "type": "array",
                                        "title": "Identifier Paths",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "identifier": {
                                                    "type": "string",
                                                    "title": "Identifier"
                                                },
                                                "path": {
                                                    "type": "string",
                                                    "title": "Path"
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            {
                                "properties": {
                                    "outputFormat": {
                                        "enum": [
                                            "ZJSON"
                                        ]
                                    },
                                    "filePath": {
                                        "type": "string",
                                        "title": "Output File Path"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        "inputFile": {
            "type": "object",
            "properties": {
                "inputFormat": {
                    "type": "string",
                    "title": "Input Format",
                    "enum": [
                        "JSONGZ",
                        "CSV",
                        "MAT",
                        "ANC"
                    ]
                }
            },
            "dependencies": {
                "inputFormat": {
                    "oneOf": [
                        {
                            "properties": {
                                "inputFormat": {
                                    "enum": [
                                        "JSONGZ"
                                    ]
                                },
                                "filePath": {
                                    "type": "string",
                                    "title": "JSON GZIP File Path"
                                }
                            }
                        },
                        {
                            "properties": {
                                "inputFormat": {
                                    "enum": [
                                        "CSV",
                                        "MAT",
                                        "ANC"
                                    ]
                                },
                                "filePath": {
                                    "type": "string",
                                    "title": "Input Index File Path"
                                },
                                "paths": {
                                    "type": "array",
                                    "title": "Sample Paths",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        },
        "trainingSubset": {
            "type": "object",
            "properties": {
                "crossValidation": {
                    "type": "boolean",
                    "title": "Cross Validation",
                    "enum": [
                        true,
                        false
                    ]
                }
            },
            "dependencies": {
                "crossValidation": {
                    "oneOf": [
                        {
                            "properties": {
                                "crossValidation": {
                                    "enum": [
                                        true
                                    ]
                                },
                                "start": {
                                    "type": "integer",
                                    "title": "Cross Validation Start"
                                },
                                "length": {
                                    "type": "integer",
                                    "title": "Cross Validation Length"
                                }
                            }
                        },
                        {
                            "properties": {
                                "crossValidation": {
                                    "enum": [
                                        false
                                    ]
                                },
                                "trainingSize": {
                                    "type": "integer",
                                    "title": "Training Size",
                                    "description": "Used determine which samples are "
                                }
                            }
                        }
                    ]
                }
            }
        },
        "preprocessor": {
            "title": "Preprocessor",
            "type": "object",
            "properties": {
                "category": {
                    "type": "string",
                    "enum": [
                        "TRANSFORMATION",
                        "DIMENSIONALITY_REDUCTION"
                    ]
                }
            },
            "dependencies": {
                "category": {
                    "oneOf": [
                        {
                            "properties": {
                                "category": {
                                    "enum": [
                                        "TRANSFORMATION"
                                    ]
                                },
                                "method": {
                                    "type": "string",
                                    "enum": [
                                        "OPTIMAL_WP",
                                        "DERIVATIVE",
                                        "MAGNITUDE_SPECTRUM",
                                        "PSD",
                                        "L1_NORM",
                                        "L2_NORM",
                                        "LINF_NORM",
                                        "LTN",
                                        "SNV",
                                        "LLSR",
                                        "LLSRDTW"
                                    ]
                                }
                            }
                        },
                        {
                            "properties": {
                                "category": {
                                    "enum": [
                                        "DIMENSIONALITY_REDUCTION"
                                    ]
                                },
                                "method": {
                                    "type": "string",
                                    "enum": [
                                        "PCA",
                                        "FUZZY_FEATURE",
                                        "GEOMETRIC",
                                        "FEATURE_INDEX"
                                    ]
                                }
                            },
                            "dependencies": {
                                "method": {
                                    "oneOf": [
                                        {
                                            "properties": {
                                                "method": {
                                                    "enum": [
                                                        "PCA"
                                                    ]
                                                },
                                                "analysis": {
                                                    "type": "string",
                                                    "enum": [
                                                        "COVARIANCE",
                                                        "CORRELATION"
                                                    ]
                                                },
                                                "components": {
                                                    "type": "integer"
                                                }
                                            }
                                        },
                                        {
                                            "properties": {
                                                "method": {
                                                    "enum": [
                                                        "FUZZY_FEATURE"
                                                    ]
                                                },
                                                "features": {
                                                    "type": "integer"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}
