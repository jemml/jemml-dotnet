{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JEMML Data Processor",
  "description": "This schema defines operations performed by examples in the JEMML library",
  "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "title": "Action",
            "description": "The target machine learning action to perform",
            "enum": [
                "PREPROCESS_DATA",
                "CLASSIFY_DATA",
                "TRAIN_PREPROCESSOR",
                "TRAIN_CLASSIFIER",
                "GENERATE_ERR"
            ]
        },
        "input": {
            "title": "Input Configuration",
            "$ref": "#/definitions/input"
        }
    },
    "dependencies": {
        "type": {
            "oneOf": [
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "PREPROCESS_DATA"
                            ]
                        },
                        "output": {
                            "$ref": "#/definitions/output/multi"
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "CLASSIFY_DATA"
                            ]
                        },
                        "output": {
                            "$ref": "#/definitions/output/multi"
                        },
                        "preprocessors": {
                            "type": "string"
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "TRAIN_PREPROCESSOR"
                            ]
                        },
                        "output": {
                            "$ref": "#/definitions/output/multi"
                        },
                        "preprocessors": {
                            "type": "string"
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "TRAIN_CLASSIFIER"
                            ]
                        },
                        "output": {
                            "$ref": "#/definitions/output/multi"
                        },
                        "preprocessors": {
                            "type": "string"
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "GENERATE_ERR"
                            ]
                        },
                        "output": {
                            "$ref": "#/definitions/output/multi"
                        },
                        "preprocessors": {
                            "type": "string"
                        }
                    }
                }
            ]
        }
    },
    "definitions": {
        "input": {
            "type": "object",
            "properties": {
                "inputFormat": {
                    "type": "string",
                    "title": "Input Format",
                    "enum": [
                        "JSONGZ",
                        "CSV",
                        "MAT",
                        "ANC"
                    ]
                },
                "crossValidation": {
                    "type": "boolean",
                    "title": "Cross Validation",
                    "enum": [
                        true,
                        false
                    ]
                }
            },
            "dependencies": {
                "inputFormat": {
                    "oneOf": [
                        {
                            "properties": {
                                "inputFormat": {
                                    "enum": [
                                        "JSONGZ"
                                    ]
                                },
                                "filePath": {
                                    "type": "string",
                                    "title": "JSON GZIP File Path"
                                }
                            }
                        },
                        {
                            "properties": {
                                "inputFormat": {
                                    "enum": [
                                        "CSV",
                                        "MAT",
                                        "ANC"
                                    ]
                                },
                                "filePath": {
                                    "type": "string",
                                    "title": "Input Index File Path"
                                },
                                "paths": {
                                    "type": "array",
                                    "title": "Sample Paths",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    ]
                },
                "crossValidation": {
                    "oneOf": [
                        {
                            "properties": {
                                "crossValidation": {
                                    "enum": [
                                        true
                                    ]
                                },
                                "start": {
                                    "type": "integer",
                                    "title": "Cross Validation Start"
                                },
                                "length": {
                                    "type": "integer",
                                    "title": "Cross Validation Length"
                                }
                            }
                        },
                        {
                            "properties": {
                                "crossValidation": {
                                    "enum": [
                                        false
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        },
        "output": {
            "multi": {
                "type": "object",
                "title": "Output Configuration",
                "properties": {
                    "outputFormat": {
                        "type": "string",
                        "title": "Output Format",
                        "enum": [
                            "CSV",
                            "ZJSON"
                        ]
                    }
                },
                "dependencies": {
                    "outputFormat": {
                        "oneOf": [
                            {
                                "properties": {
                                    "outputFormat": {
                                        "enum": [
                                            "CSV"
                                        ]
                                    },
                                    "defaultPath": {
                                        "type": "string",
                                        "title": "Default Path"
                                    },
                                    "identifierPaths": {
                                        "type": "array",
                                        "title": "Identifier Paths",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "identifier": {
                                                    "type": "string",
                                                    "title": "Identifier"
                                                },
                                                "path": {
                                                    "type": "string",
                                                    "title": "Path"
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            {
                                "properties": {
                                    "outputFormat": {
                                        "enum": [
                                            "ZJSON"
                                        ]
                                    },
                                    "filePath": {
                                        "type": "string",
                                        "title": "Output File Path"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    }
}
