{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "JEMML Data Processor",
    "description": "This schema defines operations performed by examples in the JEMML library",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "title": "Action",
            "description": "The target machine learning action to perform",
            "enum": [
                "PREPROCESS_DATA",
                "CLASSIFY_DATA",
                "TRAIN_PREPROCESSOR",
                "TRAIN_CLASSIFIER",
                "GENERATE_ERR"
            ]
        }
    },
    "dependencies": {
        "type": {
            "oneOf": [
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "PREPROCESS_DATA"
                            ]
                        },
                        "input": {
                            "$ref": "input-schema.json#/properties/processorInput"
                        },
                        "preprocessors": {
                            "$ref": "preprocessor-schema.json#/properties/preprocessors"
                        },
                        "output": {
                            "$ref": "#/definitions/output/multi"
                        }
                    },
                    "additionalProperties": false,
                    "required": ["input","output","preprocessors","type"]
                },
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "CLASSIFY_DATA"
                            ]
                        },
                        "input": {
                            "$ref": "input-schema.json#/properties/input"
                        },
                        "preprocessors": {
                            "$ref": "preprocessor-schema.json#/properties/preprocessors"
                        },
                        "classifier": {
                            "$ref": "#/definitions/classifier"
                        },
                        "output": {
                            "$ref": "#/definitions/output/single"
                        }
                    },
                    "additionalProperties": false,
                    "required": [ "input", "output", "preprocessors", "type", "classifier" ]
                },
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "TRAIN_PREPROCESSOR"
                            ]
                        },
                        "input": {
                            "$ref": "input-schema.json#/properties/processorInput"
                        },
                        "preprocessors": {
                            "$ref": "preprocessor-schema.json#/properties/preprocessors"
                        },
                        "output": {
                            "$ref": "#/definitions/output/single"
                        }
                    },
                    "additionalProperties": false,
                    "required": [ "input", "output", "preprocessors", "type" ]
                },
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "TRAIN_CLASSIFIER"
                            ]
                        },
                        "input": {
                            "$ref": "input-schema.json#/properties/input"
                        },
                        "preprocessors": {
                            "$ref": "preprocessor-schema.json#/properties/preprocessors"
                        },
                        "classifier": {
                            "$ref": "#/definitions/classifier"
                        },
                        "output": {
                            "$ref": "#/definitions/output/single"
                        }
                    },
                    "additionalProperties": false,
                    "required": [ "input", "output", "preprocessors", "type", "classifier" ]
                },
                {
                    "properties": {
                        "type": {
                            "enum": [
                                "GENERATE_ERR"
                            ]
                        },
                        "input": {
                            "$ref": "input-schema.json#/properties/input"
                        },
                        "preprocessors": {
                            "$ref": "preprocessor-schema.json#/properties/preprocessors"
                        },
                        "classifier": {
                            "$ref": "#/definitions/classifier"
                        },
                        "output": {
                            "$ref": "#/definitions/output/single"
                        }
                    },
                    "additionalProperties": false,
                    "required": [ "input", "output", "preprocessors", "type", "classifier" ]
                }
            ]
        }
    },
    "definitions": {
        "classifier": {
            "type": "object",
            "properties": {
                "classifierType": {
                    "type": "string",
                    "enum": [
                        "KNN",
                        "LDA",
                        "LSPC",
                        "MLP",
                        "SVM"
                    ]
                }
            },
            "dependencies": {
                "classifierType": {
                    "oneOf": [
                        {
                            "properties": {
                                "classifierType": {
                                    "enum": [
                                        "KNN"
                                    ]
                                },
                                "parameters": {
                                    "$ref": "#/definitions/classifierParams/knn"
                                }
                            }
                        },
                        {
                            "properties": {
                                "classifierType": {
                                    "enum": [
                                        "LDA"
                                    ]
                                },
                                "parameters": {
                                    "$ref": "#/definitions/classifierParams/lda"
                                }
                            }
                        },
                        {
                            "properties": {
                                "classifierType": {
                                    "enum": [
                                        "LSPC"
                                    ]
                                },
                                "parameters": {
                                    "$ref": "#/definitions/classifierParams/lspc"
                                }
                            }
                        },
                        {
                            "properties": {
                                "classifierType": {
                                    "enum": [
                                        "MLP"
                                    ]
                                },
                                "parameters": {
                                    "$ref": "#/definitions/classifierParams/mlp"
                                }
                            }
                        },
                        {
                            "properties": {
                                "classifierType": {
                                    "enum": [
                                        "SVM"
                                    ]
                                },
                                "parameters": {
                                    "$ref": "#/definitions/classifierParams/svm"
                                }
                            }
                        }
                    ]
                }
            }
        },
        "output": {
            "multi": {
                "type": "object",
                "title": "Output Configuration",
                "properties": {
                    "outputFormat": {
                        "type": "string",
                        "title": "Output Format",
                        "enum": [
                            "CSV",
                            "ZJSON"
                        ]
                    }
                },
                "dependencies": {
                    "outputFormat": {
                        "oneOf": [
                            {
                                "properties": {
                                    "outputFormat": {
                                        "enum": [
                                            "CSV"
                                        ]
                                    },
                                    "defaultPath": {
                                        "type": "string",
                                        "title": "Default Path"
                                    },
                                    "identifierPaths": {
                                        "type": "array",
                                        "title": "Identifier Paths",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "identifier": {
                                                    "type": "string",
                                                    "title": "Identifier"
                                                },
                                                "path": {
                                                    "type": "string",
                                                    "title": "Path"
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            {
                                "properties": {
                                    "outputFormat": {
                                        "enum": [
                                            "ZJSON"
                                        ]
                                    },
                                    "filePath": {
                                        "type": "string",
                                        "title": "Output File Path"
                                    }
                                }
                            }
                        ]
                    }
                }
            },
            "single": {
                "type": "object",
                "title": "Output Configuration",
                "properties": {
                    "filePath": {
                        "type": "string",
                        "title": "Output File Path"
                    }
                }
            }
        },
        "classifierParams": {
            "knn": {
                "type": "object",
                "properties": {
                    "k": {
                        "type": "integer"
                    }
                }
            },
            "lda": {
                "type": "object",
                "properties": {
                    "ldaType": {
                        "type": "string",
                        "enum": [
                            "ULDA",
                            "KLDA"
                        ]
                    }
                },
                "dependencies": {
                    "ldaType": {
                        "oneOf": [
                            {
                                "properties": {
                                    "ldaType": {
                                        "enum": [
                                            "ULDA"
                                        ]
                                    }
                                }
                            },
                            {
                                "properties": {
                                    "ldaType": {
                                        "enum": [
                                            "KLDA"
                                        ]
                                    },
                                    "gamma": {
                                        "type": "number"
                                    }
                                }
                            }
                        ]
                    }
                }
            },
            "lspc": {
                "type": "object",
                "properties": {
                    "r": {
                        "type": "number"
                    },
                    "w": {
                        "type": "number"
                    }
                }
            },
            "mlp": {
                "type": "object",
                "properties": {
                    "strategy": {
                        "type": "string",
                        "enum": [
                            "ONE_TO_MANY",
                            "MANY_TO_MANY"
                        ]
                    },
                    "hiddenLayers": {
                        "type": "integer"
                    },
                    "maxTrainingIterations": {
                        "type": "integer"
                    },
                    "minTrainingError": {
                        "type": "number"
                    },
                    "trainingStrategy": {
                        "type": "string",
                        "enum": [
                            "RESILIENT",
                            "BACKPROPAGATION"
                        ]
                    }
                },
                "dependencies": {
                    "trainingStrategy": {
                        "oneOf": [
                            {
                                "properties": {
                                    "trainingStrategy": {
                                        "enum": [
                                            "RESILIENT"
                                        ]
                                    }
                                }
                            },
                            {
                                "properties": {
                                    "trainingStrategy": {
                                        "enum": [
                                            "BACKPROPAGATION"
                                        ]
                                    },
                                    "learningRate": {
                                        "type": "number"
                                    },
                                    "momentum": {
                                        "type": "number"
                                    }
                                }
                            }
                        ]
                    }
                }
            },
            "svm": {
                "type": "object",
                "properties": {
                    "c": {
                        "type": "number"
                    },
                    "gamma": {
                        "type": "number"
                    }
                }
            }
        }
    }
}
